<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>java-isds</artifactId>
    <groupId>cz.abclinuxu.datoveschranky</groupId>
    <version>1.1.2</version>
  </parent>

  <properties>
<!--      <osgi.import>-->
<!--        javax.xml.ws;version="[1.1,3)",-->
<!--        ${osgi.import.default}-->
<!--      </osgi.import>-->
    <jakarta.xml.ws-api.version>4.0.1</jakarta.xml.ws-api.version>
    <jaxws-rt.version>4.0.2</jaxws-rt.version>
    <jaxws-ri.version>4.0.2</jaxws-ri.version>
    <jaxws-maven-plugin.version>3.0.0</jaxws-maven-plugin.version>
  </properties>

  <artifactId>isds-web-services</artifactId>
  <name>JavaISDS :: Web Services</name>
  <description>Entity classes generated from WSDL.</description>
  <packaging>jar</packaging>

  <dependencies>
    <dependency>
      <groupId>jakarta.xml.ws</groupId>
      <artifactId>jakarta.xml.ws-api</artifactId>
      <version>${jakarta.xml.ws-api.version}</version>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.ws</groupId>
      <artifactId>jaxws-rt</artifactId>
      <version>${jaxws-rt.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.ws</groupId>
      <artifactId>jaxws-ri</artifactId>
      <version>${jaxws-ri.version}</version>
      <type>pom</type>
    </dependency>
  </dependencies>
  
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <directory>src/main/wsdl</directory>
      </resource>
    </resources>

    <plugins>     
      <plugin>
        <groupId>com.sun.xml.ws</groupId>
        <artifactId>jaxws-maven-plugin</artifactId>
        <version>${jaxws-maven-plugin.version}</version>
        <configuration>
          <wsdlDirectory>${basedir}/src/main/resources</wsdlDirectory>
          <sourceDestDir>${basedir}/src/main/java</sourceDestDir>
          <extension>true</extension>
        </configuration>
        <executions>
          <execution>
            <id>db</id>
            <phase>generate-sources</phase>
            <configuration>
              <staleFile>${project.build.directory}/jaxws/stale/wsdl.db.done</staleFile>
              <packageName>cz.abclinuxu.datoveschranky.ws.db</packageName>
              <sourceDestDir>target/generated-sources/wsdl</sourceDestDir>
              <wsdlDirectory>src/main/resources/wsdl</wsdlDirectory>
              <wsdlFiles>
                <wsdlFile>db_manipulations.wsdl</wsdlFile>
                <wsdlFile>db_search.wsdl</wsdlFile>
                <wsdlFile>db_supplementary.wsdl</wsdlFile>
              </wsdlFiles>
            </configuration>
            <goals>
              <goal>wsimport</goal>
            </goals>
          </execution>

          <execution>
            <id>dm</id>
            <phase>generate-sources</phase>
            <configuration>
              <staleFile>${project.build.directory}/jaxws/stale/wsdl.dm.done</staleFile>
              <packageName>cz.abclinuxu.datoveschranky.ws.dm</packageName>
              <sourceDestDir>target/generated-sources/wsdl</sourceDestDir>
              <wsdlDirectory>src/main/resources/wsdl</wsdlDirectory>
              <wsdlFiles> 
                <wsdlFile>dm_info.wsdl</wsdlFile>
                <wsdlFile>dm_operations.wsdl</wsdlFile>
              </wsdlFiles>
            </configuration>
            <goals>
              <goal>wsimport</goal>
            </goals>
          </execution>
          
        </executions>
        
      </plugin>

    </plugins>
    
  </build>
</project>
